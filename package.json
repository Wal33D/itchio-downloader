{
   "name": "itchio-downloader",
   "version": "0.7.7",
   "description": "Programatically download games from itch.io using Node",
   "main": "./dist/index.js",
   "types": "./dist/index.d.ts",
   "bin": {
      "itchio-downloader": "./dist/cli.js"
   },
    "scripts": {
        "clean": "rimraf ./dist/",
        "build": "npm run clean && tsc",
        "dev": "nodemon --watch src --ext ts --exec \"ts-node ./src/index.ts\"",
        "build-cli": "npm run clean && tsc && shx chmod +x ./dist/cli.js",
        "prepublishOnly": "npm run build-cli",
        "test": "jest",
        "test:downloadSingle": "npm run build && ts-node ./examples/downloadSingle.ts",
        "test:downloadMultiple": "npm run build && ts-node ./examples/downloadMultiple.ts",
        "test:waitForFile": "npm run build && ts-node ./examples/waitForFile.example.ts"
    },
   "author": "Wal33D",
   "license": "ISC",
   "engines": {
      "node": ">=18"
   },
   "dependencies": {
      "puppeteer": "^24.11.2",
      "yargs": "^18.0.0"
   },
   "devDependencies": {
      "@types/jest": "^30.0.0",
      "@types/node": "^24.0.10",
      "@types/yargs": "^17.0.33",
      "jest": "^30.0.4",
      "nodemon": "^3.1.10",
      "rimraf": "^6.0.1",
      "shx": "^0.4.0",
      "ts-jest": "^29.4.0",
      "ts-node": "^10.9.2",
      "typescript": "^5.8.3"
   },
   "repository": {
      "type": "git",
      "url": "https://github.com/Wal33D/itchio-downloader.git"
   },
   "homepage": "https://github.com/Wal33D/itchio-downloader"
}
